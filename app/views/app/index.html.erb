<div ng-app="funFeedApp" class="container main">
  <h1> FunFeed </h1><br>
  <div ng-controller="PostController">
    <div class="col-md-2">
      <input type="text" ng-model="searchText" placeholder="Filter Posts">
    </div>
    <div class="col-md-8">
      <input type="text" ng-model="postContent">
      <div class="btn btn-primary btn-xs" ng-click="submitPost(postContent)">Create Post</div>
    </div>
    <ul class="list-inline col-md-12">
      <li ng-repeat="post in data | filter:searchText">
        <button type="button" class="close" aria-hidden="true" ng-click="deletePost(post)">&times;</button>
        {{post.content}}
      </li>
    </ul>
  </div>
</div>
